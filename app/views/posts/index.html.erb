
<h1 class="center">All Questions</h1>

<div class="post-list">
  <div class = "posts">
    <% @posts.each do |post| %>
      <% if post.parent_id==nil %>
        <li>
          <div class="votes">
            <div class="mini-counts"><%= post.vote %>  </div>
            <div>Votes</div>
          </li>
          <li>
            <div class = "answers">
            <div class="mini-counts">0</div>
            <div>Answers</div>
          </li>
        <li><%= link_to post.title, post_path(post) %></li><br>
      <% end %><br><br>
    <hr class="clear">
    <% end %>
  </div>
</div>

