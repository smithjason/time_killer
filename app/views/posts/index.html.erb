

<h1 class="center">All Questions</h1>

<div class="post-list">
    <% @questions.each do |question| %>
    <div class = "posts">
      <li>
        <div class="votes">
          <div class="mini-counts"><%= question.vote %></div>
          <div>Votes</div>
        </div>
      </li>
      <li>
        <div class = "answers">
          <div class="mini-counts"><%= question.answers.count %></div>
          <div>Answers</div>
        </div>
      </li>
      <!-- This is hideous and I know it...  -->
      <li><%= link_to question.title, post_path(question) %></li> Submitted by: <%= question.user.name %>
    </div>
    <hr class="clear">
    <% end %>
</div>